    <servlet-class>gr.ntua.cslab.services.iaas.Actions</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>iaasprobes</servlet-name>
    <servlet-class>gr.ntua.cslab.services.iaas.Probes</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>metricsget</servlet-name>
    <servlet-class>gr.ntua.cslab.services.metrics.Get</servlet-class>
