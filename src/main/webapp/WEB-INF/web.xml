  <servlet>
    <servlet-name>smartdeploy</servlet-name>
    <servlet-class>gr.ntua.cslab.services.deployment.SmartDeploy</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>shutdown</servlet-name>
    <servlet-class>gr.ntua.cslab.services.deployment.Shutdown</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>resize</servlet-name>
    <servlet-class>gr.ntua.cslab.services.deployment.Resize</servlet-class>
