    <servlet-name>providedresources</servlet-name>
    <url-pattern>/iaas/resources/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userquotas</servlet-name>
    <url-pattern>/iaas/quotas/*</url-pattern>
  </servlet-mapping>
